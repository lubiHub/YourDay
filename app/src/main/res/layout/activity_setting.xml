<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/note_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y10"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@android:color/black"
        android:text="更换主题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y10"
            app:cardCornerRadius="@dimen/y20">

            <ImageView
                android:id="@+id/theme_one"
                android:layout_width="@dimen/y250"
                android:layout_height="@dimen/y400"
                android:background="@drawable/theme_bg_one" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            app:cardCornerRadius="@dimen/y20">

            <ImageView
                android:id="@+id/theme_two"
                android:layout_width="@dimen/y250"
                android:layout_height="@dimen/y400"
                android:background="@drawable/theme_bg_two" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/pay_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:padding="@dimen/y40"
        android:text="打赏" />

    <ImageView
        android:id="@+id/pay"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>